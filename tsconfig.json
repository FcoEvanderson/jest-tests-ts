{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "ESNext",
      "dom",
      "es2015.promise",
      "es5",
    ],
    "sourceMap": true
  },
  "include": [
    "./src"
  ]
}
